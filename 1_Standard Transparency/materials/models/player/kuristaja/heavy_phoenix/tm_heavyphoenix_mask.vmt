"vertexlitgeneric"
{
	"$basetexture"        "models\player\kuristaja\heavy_phoenix\tm_heavyphoenix_mask_color"
	"$bumpmap"            "models\player\kuristaja\heavy_phoenix\tm_heavyphoenix_mask_normal"
	"$model"              "1"
	"$phong"              "1"
	"$nodecal"            1
	"$phongboost"         "10"
	"$phongexponent"      "32"
	"$phongfresnelranges" "[0.05 0.5 1]"
	"$rimlight"           "1"
	"$rimlightexponent"   "12"
	"$rimlightboost"      ".7"
	"$halflambert"        1
	"$alpha" 1.0
	"$player_distance" 0.0
	"$same_team" "0"
	"$temp_1" "0.5"
	"$temp_2" "1"
	"$temp_3" "0"
	"Proxies"
	{
		"PlayerTeamMatch"
		{
			"resultVar" "$same_team" 		//0 different, 1 same team
		}
		"PlayerProximity"
		{
			"scale" "0.007"
			"resultVar" "$player_distance" 
		}
		"Subtract"
		{
			"srcVar1" "$player_distance"
			"srcVar2" "$temp_1"
			"resultVar" "$player_distance"	
		}
		"LessOrEqual"
		{
			"srcVar1" "$same_team"			// if $same_team
			"srcVar2" "$temp_1"				// == 1
			"resultVar" "$temp_3"			// { $temp_3 =
          	"greaterVar" "$player_distance"	// $player_distance }
        	"LessEqualVar" "$temp_2"			// else { $temp_3 = 1 }
		}
		"Clamp"
		{
			"min" "0.05"
			"max" "1.0"
			"srcVar1" "$temp_3"
			"resultVar" "$alpha"
		}
	}
}
