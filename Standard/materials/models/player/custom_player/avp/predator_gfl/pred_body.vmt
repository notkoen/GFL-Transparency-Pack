"VertexLitGeneric"
{
	"$baseTexture" "models/player/custom_player/avp/predator_gfl/Pred_Body"
	"$bumpmap" "models/player/custom_player/avp/predator_gfl/Pred_Body_n"

	"$phong" "1"
	"$phongboost" "7"	
	"$phongexponent" 95
	"$phongfresnelranges"	"[1 1 1]"
	//"$phongexponent" "1"
	"$phongexponenttexture" "models/player/custom_player/avp/predator_gfl/Pred_Body_spec"
	"$phongalbedotint" "1"

	"$rimlight" "1"
	"$rimlightexponenttexture" "models/player/custom_player/avp/predator_gfl/Pred_Body_spec"				
	"$rimlightexponent" "0.5"								
	"$rimlightboost" "0.1"
	"$alpha" 1.0
	"$player_distance" 0.0
	"$same_team" "0"
	"$temp_1" "0.5"
	"$temp_2" "1"
	"$temp_3" "0"
	"Proxies"
	{
		"PlayerTeamMatch"
		{
			"resultVar" "$same_team" 		//0 different, 1 same team
		}
		"PlayerProximity"
		{
			"scale" "0.007"
			"resultVar" "$player_distance" 
		}
		"Subtract"
		{
			"srcVar1" "$player_distance"
			"srcVar2" "$temp_1"
			"resultVar" "$player_distance"	
		}
		"LessOrEqual"
		{
			"srcVar1" "$same_team"			// if $same_team
			"srcVar2" "$temp_1"				// == 1
			"resultVar" "$temp_3"			// { $temp_3 =
          	"greaterVar" "$player_distance"	// $player_distance }
        	"LessEqualVar" "$temp_2"			// else { $temp_3 = 1 }
		}
		"Clamp"
		{
			"min" "0.05"
			"max" "1.0"
			"srcVar1" "$temp_3"
			"resultVar" "$alpha"
		}
	}
}
